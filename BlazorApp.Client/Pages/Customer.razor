@page "/customer"
@page "/customer/{id:guid}"
@inherits CustomerBase

@if (Id == null)
{
    <PageTitle>Create a new Customer</PageTitle>
    <h3>Create a new Customer</h3>
}
else
{
    <PageTitle>Edit @customer.Id</PageTitle>
    <h3>Edit @customer.Id</h3>
}

<EditForm Model="customer" OnSubmit="HandleSubmit">
    <div>
        <label for="companyName">Company Name</label>
        <InputText id="companyName" @bind-Value="customer.CompanyName" class="form-control"></InputText>
    </div>
    <div>
        <label for="contactName">Contact Name </label>
        <InputText id="contactName " @bind-Value="customer.ContactName" class="form-control"></InputText>
    </div>

    <div>
        <label for="address">Address</label>
        <InputText id="address" @bind-Value="customer.Address " class="form-control"></InputText>
    </div>

    <div>
        <label for="city">City </label>
        <InputText id="city" @bind-Value="customer.City " class="form-control"></InputText>
    </div>

    <div>
        <label for="region">Region</label>
        <InputText id="region" @bind-Value="customer.Region " class="form-control"></InputText>
    </div>

    <div>
        <label for="postalCode">PostalCode </label>
        <InputText id="postalCode" @bind-Value="customer.PostalCode " class="form-control"></InputText>
    </div>

    <div>
        <label for="country">Country </label>
        <InputText id="country" @bind-Value="customer.Country " class="form-control"></InputText>
    </div>

    <div>
        <label for="phone">Phone </label>
        <InputText id="phone" @bind-Value="customer.Phone " class="form-control"></InputText>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">@btnText</button>
    <button type="button" class="btn btn-danger" @onclick="DeleteCustomer">Delete Customer</button>
</EditForm>

